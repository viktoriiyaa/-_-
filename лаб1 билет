    e = int(c[0]) * int(c[1]) * int(c[2]) * int(c[3])
    print ("sum - ", d)
    print ("digit- ", e)
    print ("-prime factors of numbers-")
    while a/b>=1:
        while a%b == 0:
            print(b)
            a = a/b
        b=b+1
else:
    print ("error")
