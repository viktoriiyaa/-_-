#include <stdio.h>
#include <conio.h>
#include <string.h>

int main()
{
    int n, b, i, c, x;
    printf("enter the number of array elements: ");
    scanf("%d", &n);
    int a[n];

    for (int i = 0; i <= n; i++)
    {
        scanf("%d", &b);
        a[i] = b;
        printf("a[%d] = ", i);
        printf("%d\n", a[i]);

        if (n > i)
        {
            scanf("%d", &b);
            a[n] = b;
            printf("a[%d] = ", n);
            printf("%d\n", a[n]);
            n--;
        }
    }
    return 0;
}
